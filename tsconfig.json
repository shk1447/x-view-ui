{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib", // lib폴더에 ts 타입 속성을 빌드한다.
    "target": "es5",
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "downlevelIteration": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "typeRoots": ["@types"],
    "types": ["react", "@emotion/react/types/css-prop"]
  },
  "include": [
    "**/*.tsx",
    "**/*.mdx",
    "**/*.ts",
    "@types",
    "index.ts",
    "svg.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "lib",
    "rollup.config.js",
    "**/*.stories.tsx"
  ]
}
